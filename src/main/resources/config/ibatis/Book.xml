<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
  PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
  "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="Book" type="com.reader.core.model.Book" />
	<resultMap id="book" class="Book">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="author" column="author" />
		<result property="content" column="content" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="recommend" column="recommend" />
		<result property="cover" column="cover" />
		<result property="reader" column="reader" />
		<result property="focus" column="focus" />
		<result property="catalog" column="catalog" />
		<result property="score" column="score" />
	</resultMap>
	<select id="selectBookById" resultClass="book">
		<![CDATA[
		select
		* 
		from t_book
		where
		id=#id#;
		]]>
	</select>
	<select id="selectAllBook" resultClass="book">
		<![CDATA[
		select
		* 
		from t_book
		order by update_time desc
		limit #start#,#limit#;
		]]>
	</select>
	<select id="countAllBook" resultClass="int">
		<![CDATA[
		select 
		count(*) 
		from
		t_book;
		]]>
	</select>
	<select id="selectBookByName" resultClass="book">
		<![CDATA[
		select
		* 
		from t_book
		order by update_time desc
		where 
		name like %#name#% 
		limit #start#,#limit#;
		]]>
	</select>
	<select id="countBookByName" resultClass="int">
		<![CDATA[
		select 
		count(*) 
		from
		t_book
		where 
		name like %#name#%;
		]]>
	</select>
	<insert id="insertBook">
		<![CDATA[
		insert 
		into t_book
		(id,name,author,content,create_time,update_time,recommend,cover,reader,focus,catalog,score)
		values
		(#id#,#name#,#author#,#content#,now(),now(),0,#cover#,0,0,#catalog#,0);
		]]>
	</insert>

	<delete id="deleteBook">
		<![CDATA[
		delete 
		from 
		t_book 
		where 
		id=#id#;
		]]>
	</delete>

	<update id="updateBook">
		<![CDATA[
		update 
		t_book 
		set
		name=#name#,author=#author#,content=#content#,update_time=now(),
		recommend=#recommend#,cover=#cover#, reader=#reader#,focus=#focus#,
		catalog=#catalog#,score=#score#,create_time=now() 
		where 
		id=#id#;
		]]>
	</update>
</sqlMap>
