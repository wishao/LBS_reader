<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
  PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
  "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="Contact" type="com.reader.core.model.Contact" />
	<select id="selectAllContact" resultClass="Contact">
		select * from
		t_contact;
	</select>
	<select id="selectContactByUser" resultClass="Contact">
		select * from
		t_contact
		where send_user_id=#sendUserId# or
		receive_user_id=#receiveUserId#;
	</select>
	<insert id="insertContact" parameterClass="Contact">
		insert into t_contact
		(id,send_user_id,receive_user_id,content,create_time)
		values
		(#id#,#sendUserId#,#receiveUserId#,#content#,#createTime#);
	</insert>

	<delete id="deleteContact">
		delete from t_contact where id=#id#;
	</delete>

	<update id="updateContact" parameterClass="Contact">
		update t_contact set
		send_user_id=#sendUserId#,
		receive_user_id=#receiveUserId#,content=#content#,
		create_time=#createTime# where id=#id#;
	</update>
</sqlMap>
