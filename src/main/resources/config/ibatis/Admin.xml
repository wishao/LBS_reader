<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
  PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
  "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="Admin" type="com.reader.core.model.Admin" />
	<select id="selectAllAdmin" resultClass="Admin">
		select * from t_admin;
	</select>
	<select id="loginAdmin" resultClass="Admin">
		select * from t_admin where
		name=#name# and password=#password#;
	</select>
	<insert id="insertAdmin">
		insert into t_admin
		(id,name,password,role,create_time) values
		(#id#,#name#,#password#,#role#,now());
	</insert>

	<delete id="deleteAdmin">
		delete from t_admin where id=#id#;
	</delete>

	<update id="updateAdmin">
		update t_admin set
		name=#name#,password=#password#,role=#role#
		where id=#id#;
	</update>
</sqlMap>
