<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
  PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
  "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="Reader" type="com.reader.core.model.Reader" />
	<select id="selectAllReader" resultClass="Reader">
		select * from t_reader;
	</select>
	<select id="selectReaderByUser" resultClass="Reader">
		select * from
		t_reader
		where user_id=#userId#;
	</select>
	<insert id="insertReader" parameterClass="Reader">
		insert into t_reader
		(id,user_id,font,background_color,font_color,create_time)
		values
		(#id#,#userId#,#font#,#backgroundColor#,#fontColor#,#createTime#);
	</insert>

	<delete id="deleteReader">
		delete from t_reader where id=#id#;
	</delete>

	<update id="updateReader" parameterClass="Reader">
		update t_reader set
		user_id=#userId#, font=#font#,background_color=#backgroundColor#,
		font_color=#fontColor#,create_time=#createTime# where id=#id#;
	</update>
</sqlMap>
